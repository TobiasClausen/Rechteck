<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Hyperlink?>
<VBox prefHeight="333.0" prefWidth="432.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shoppingcart.ShoppingCartController">
    <Label text="Product:" />
    <ComboBox fx:id="productComboBox" />
    <Label text="Quantity:" />
    <Spinner fx:id="quantitySpinner" />
    <Button onAction="#addToCart" text="Add to Cart" />

   <Label fx:id="output" text="Label" />
    <Hyperlink text="Warenkorb anzeigen" onAction="#showCart"/>

</VBox>
